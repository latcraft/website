section#events
	.container
		h2.title Events
		.carousel
			.holder
				for event in events
					div.slide
						.description 
							h3 #{event.theme}
							p #{event.desc}
						.bubble
							ul
								li 
									strong date:
									| #{event.date}
								li 
									strong time:
									| #{event.time}
								if event.announced
									li 
										strong venue: 
										a#goto-map(href="#map") #{event.venue}
							if event.announced
								a#reserve-seat.button.big book a seat

						ul.speakers
							for speaker in event.speakers
								li
									.title-holder
										h3 #{speaker.title}
									.author
										img(src=speaker.img, alt="")
										h5 #{speaker.name}
										span #{speaker.bio}
									p #{speaker.description}
									.button-group
										if speaker.presentation
											a.button.effect(href=speaker.presentation) 
												div(data-hover="view slides") view slides
										if speaker.video
											a.button.icon(href=speaker.video)
												i.fa.fa-play-circle
						.pagination
							span speakers: 
							ul
		a.prev.button(href="#")
			i.fa.fa-angle-left
		a.next.button(href="#")
			i.fa.fa-angle-right