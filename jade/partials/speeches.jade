section#speeches
	.container
		h2 Speeches
		.carousel
			.holder
				for speach in speaches
					div.slide
						.description
							p This talk will guide you through the core concepts of the Go. We will cover the type system, memory model, packaging and of course the famous concurrency primitives of the language: goroutines.
						ul.speakers
							for speaker in speach.speakers
								li
									.title-holder
										h3 #{speaker.title}
									.author
										img(src=speaker.img, alt="")
										h5 #{speaker.name}
										span #{speaker.bio}
									p #{speaker.description}
									.button-group
										if speaker.presentation
											a.button.effect(href=speaker.presentation) 
												div(data-hover="view slides") view slides
										if speaker.video
											a.button.icon(href=speaker.video)
												i.fa.fa-play-circle
						.pagination
							span speakers: 
							ul
		a.prev.button(href="#")
			i.fa.fa-angle-left
		a.next.button(href="#")
			i.fa.fa-angle-right