section#events
	.container
		h2.title Events
		.carousel
			.holder
				for speach in speaches
					div.slide
						.description 
							h3 #{speach.theme}
							p #{speach.desc}
						.bubble
							ul
								li 
									strong date:
									| #{speach.date}
								li 
									strong time:
									| #{speach.time}
								li 
									if speach.announced
										strong venue: 
										a#goto-map(href="#map") #{speach.venue}
							if speach.announced
								a#reserve-seat.button.big reserve seat

						ul.speakers
							for speaker in speach.speakers
								li
									.title-holder
										h3 #{speaker.title}
									.author
										img(src=speaker.img, alt="")
										h5 #{speaker.name}
										span #{speaker.bio}
									p #{speaker.description}
									.button-group
										if speaker.presentation
											a.button.effect(href=speaker.presentation) 
												div(data-hover="view slides") view slides
										if speaker.video
											a.button.icon(href=speaker.video)
												i.fa.fa-play-circle
						.pagination
							span speakers: 
							ul
		a.prev.button(href="#")
			i.fa.fa-angle-left
		a.next.button(href="#")
			i.fa.fa-angle-right